<greendroid.widget.itemview.SubtitleItemView2
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content"
    android:layout_width="wrap_content"
  android:minHeight="?attr/gdItemViewPreferredHeight"
  android:paddingLeft="?attr/gdItemViewPreferredPaddingLeft"

  android:orientation="horizontal">
  <LinearLayout

    android:layout_width="wrap_content"
    android:layout_weight="2"
    android:layout_height="wrap_content"
    android:minHeight="?attr/gdItemViewPreferredHeight"
    android:orientation="vertical">


  <TextView
    style="?attr/gdSubtitleItemViewStyleText"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:id="@+id/gd_text"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"

    android:gravity="bottom|left"

    android:singleLine="true"
    android:ellipsize="end" />

  <TextView
    android:id="@+id/gd_subtitle"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    
    android:gravity="top|left"

    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textColor="#808080"
    android:singleLine="true"
    android:ellipsize="end" />

  <TextView
    android:id="@+id/gd_subtitle2"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:textColor="#808080"
    android:layout_weight="0.5"
    
    android:gravity="top|left"

    android:singleLine="true"
    android:ellipsize="end" />


</LinearLayout>
</greendroid.widget.itemview.SubtitleItemView2>
